@{
    ViewBag.Title = "Home Page";
}
<h2>Нотатки</h2>
<h5><a href="/Home/Create/">Додати</a></h5>
<div class="row">
    @foreach (var n in ViewBag.Notates)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@n.title</h5>
                    <p class="card-text">@n.note</p>
                </div>
                <div class="card-footer text-muted">
                    <a href="/Home/ChangeN/@n.id">Редагувати</a>
                    <a href="/Home/Delete/@n.id">Видалити</a>
                </div>
            </div>
        </div>
    }

</div>
<hr />
<h2>Події</h2>
<h5><a href="/Home/CreateE/">Додати</a></h5>
<div class="row alert-light">
    @foreach (var e in ViewBag.Events)
    {
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">@e.e_title</h5>
                <p class="card-text">@e.e_date</p>
            </div>
            <div class="card-footer text-muted">
                <a href="/Home/ChangeE/@e.e_id">Редагувати</a>
                <a href="/Home/DeleteE/@e.e_id">Видалити</a>
            </div>
        </div>
    </div>
    }
</div>
<hr />
<h2>Завдання</h2>
<h5><a href="/Home/Create/">Додати</a></h5>
<div class="row">
    @foreach (var t in ViewBag.Tassks)
    {
        if (t.T_check == false)
        {
            <div class="col-md-4 alert-dark">
                <h3>@t.T_title</h3>.
                <p>@t.T_desc</p>
                <p>@t.T_data</p>
                <a href="/Home/ChangeN/@t.TaskId">Керувати завданням</a>
            </div>
        }
        else
        {
            <div class="col-md-4">
                <h3>@t.T_title</h3>.
                <p>@t.T_desc</p>
                <p>@t.T_data</p>
                <a href="/Home/ChangeN/@t.TaskId">Керувати завданням</a>
            </div>
        }              
    }
</div>

